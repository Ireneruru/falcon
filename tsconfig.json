{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "files": [
    "node_modules/@types/**/*.d.ts",
    "client/**/*.ts"
  ]
}
