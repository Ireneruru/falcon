{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "types": [
      "node"
    ],
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "server/**/*.ts",
    "client/**/*.ts",
    "declarations/**.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
