{
  "compilerOptions": {
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "typings", "node_modules/@types"
    ]
  },
  "include": [
    "typings/*.d.ts",
    "shared/**/*.ts",
    "server/**/*.ts",
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
