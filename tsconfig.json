{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "files": [
    "node_modules/@types/**/*.d.ts",
    "client/**/*.ts"
  ]
}
