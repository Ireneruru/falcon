{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "types": [
      "node"
    ],
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "server/**/*.ts",
    "client/**/*.ts",
    "interfaces.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
