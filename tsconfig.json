{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "files": ["src/index.ts"],
  "include": ["typings/*.d.ts", "node_modules/**/*.d.ts"]
}
